    +dev_head('Practic расписание  ', false, false, false, true)

    body.cal_header_mod.cal_body_mod
        .wrapper
            //-.rect_1024
            .base
                +header(1, false, true)

                div.main_content
                    .section_inner.calendarHolder
                        .calendar_tip: .patient_tip
