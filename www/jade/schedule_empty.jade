                        #calendar.calendar_v1
                       
                        .day_info_block.dayInfoBlock
                            //.patient_card
                                +patient_status()
                                +patient_menu()
                                a.patient_avatar(href='#'): img(src='i/user_2.png')
                                .patient_info
